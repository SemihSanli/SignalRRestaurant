@model UpdateAboutDTOs
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Hakkımızda Bilgi Güncelleme İşlemleri</div>
                        </div>
                        <input type="hidden" asp-for="AboutID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="abouttitle">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutTitle" id="AboutTitle">

                            </div>
                            <div class="form-group">
                                <label for="aboutimageurl">Görsel URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutImageURL" id="AboutImageURL">

                            </div>
                            <div class="form-group">
                                <label for="aboutdescription">Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="AboutDescription" id="AboutDescription"></textarea>
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary">Hakkımızda Bilgisini Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

