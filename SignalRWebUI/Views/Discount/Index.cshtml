@model List<ResultDiscountDTOs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Index</h1>
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirimli Ürün Listesi </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirimli Ürün İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz. Tema Düzeni İçin 2 Adet Giriş Yapınız
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">İndirim Durumu</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Aktif Yap</th>
									<th scope="col">Pasif Yap</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{

									<tr>
										<td>@item.DiscountID</td>
										<td>@item.DiscountTitle</td>
										<td>@item.DiscountAmount</td>
										<td>@item.DiscountStatus</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-warning">Durum</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Discount/ChangeStatusToTrue/@item.DiscountID" class="btn btn-outline-success">Aktif Yap</a></td>
										<td><a href="/Discount/ChangeStatusToFalse/@item.DiscountID" class="btn btn-outline-info">Pasif Yap</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni İndirimli Ürün Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
