@model CreateDiscountDTOs
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirimli Ürün İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountTitle">Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="DiscountTitle" id="DiscountTitle">

                            </div>
                            <div class="form-group">
                                <label for="DiscountAmount">Ürün İndirim Oranı</label>
                                <input type="text" class="form-control" asp-for="DiscountAmount" id="DiscountAmount">

                            </div>
                            <div class="form-group">
                                <label for="DiscountImageURL">Ürün Görseli</label>
                                <input type="text" class="form-control" asp-for="DiscountImageURL" id="DiscountImageURL">

                            </div>
                            <div class="form-group">
                                <label for="DiscountDescription">Açıklama</label>
                                <input type="text" class="form-control" asp-for="DiscountDescription" id="DiscountDescription">

                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary">İndirimli Ürünü Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

